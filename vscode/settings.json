{
  // Editor (font) settings
  "editor.fontFamily": "Hack Nerd Font",
  "editor.lineHeight": 20,
  // Editor settings
  "editor.rulers": [
    100,
    140
  ],
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.showUnused": false,
  "editor.colorDecorators": false,
  "editor.snippetSuggestions": "inline",
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  "editor.renderLineHighlight": "all",
  "editor.stablePeek": false,
  "editor.minimap.enabled": false,
  "editor.dragAndDrop": false,
  // Workbench settings
  "workbench.editor.swipeToNavigate": true,
  "workbench.colorTheme": "Dracula Soft",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    "statusBar.background": "#466991"
  },
  // Window settings
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  // Files settings
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "files.associations": {
    "*.log": "log",
    "**/.vsts/**/*.yml": "azure-pipelines"
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.hotExit": "off",
  "files.useExperimentalFileWatcher": true,
  // File Explorer settings
  "explorer.autoReveal": false,
  "explorer.decorations.colors": false,
  // Search settings
  "search.useIgnoreFiles": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/out": true
  },
  // Extensions settings
  "extensions.autoUpdate": false,
  // CSS settings
  "css.lint.duplicateProperties": "warning",
  "css.lint.zeroUnits": "error",
  "css.lint.idSelector": "error",
  // SCSS settings
  "scss.lint.duplicateProperties": "warning",
  "scss.lint.zeroUnits": "error",
  "scss.lint.idSelector": "error",
  // Less settings
  "less.lint.duplicateProperties": "warning",
  "less.lint.zeroUnits": "error",
  "less.lint.idSelector": "error",
  // HTML setting
  "html.format.wrapLineLength": 0,
  "html.format.indentInnerHtml": true,
  "html.format.maxPreserveNewLines": 1,
  "html.format.endWithNewline": true,
  // PHP settings
  "php.suggest.basic": false,
  "php.validate.enable": false,
  // TypeScript settings
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
  // JavaScript settings
  "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
  // Terminal settings
  "terminal.external.osxExec": "iTerm.app",
  // Intergated Terminal settings
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.env.osx": {
    "PATH": "${cwd}/node_modules/.bin"
  },
  // Default Configuration Overrides settings
  "[markdown]": {
    "editor.wordWrapColumn": 140,
    "editor.wordWrap": "wordWrapColumn"
  },
  "[python]": {
    "editor.detectIndentation": false
  },
  // Git
  "git.enabled": true,
  // Gulp settings
  "gulp.autoDetect": "off",
  // ESLint extension
  "eslint.run": "onSave",
  "eslint.options": {
    "configFile": "./.eslintrc"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript"
  ],
  "workbench.startupEditor": "welcomePage",
  "cSpell.minWordLength": 2,
  "cSpell.spellCheckDelayMs": 500,
  "cSpell.language": "en,ru",
  "cSpell.userWords": [
    "nodelib",
    "groupable",
    "execa",
    "ipc",
    "tsc",
    "quantile",
    "stdev"
  ],
  "window.zoomLevel": 0,
  "diffEditor.renderSideBySide": true,
  "editor.lightbulb.enabled": false,
  "python.jediEnabled": false,
  "terminal.integrated.shell.osx": "/bin/zsh",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": "300",
  "editor.cursorWidth": 3,
  "editor.detectIndentation": false,
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "extensions.showRecommendationsOnlyOnDemand": true,
  "editor.parameterHints.enabled": false,
  "json.format.enable": true,
  "terminal.integrated.fontSize": 13,
  "editor.cursorSmoothCaretAnimation": true,
  "explorer.confirmDelete": false,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "npm-intellisense.scanDevDependencies": true,
  "azureFunctions.projectLanguage": "JavaScript",
  "npm-intellisense.showBuildInLibs": true
}
